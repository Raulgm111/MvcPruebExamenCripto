@model Usuario

<h1>Log In User</h1>

<form method="post">
    <label>Email</label>
    <input type="text" name="email" class="form-control" />
    <label>Password</label>
    <input type="text" name="password" class="form-control" />
    <button class="btn btn-info">
        Log In
    </button>
</form>
<h1 style="color:lightskyblue">
    @ViewData["MENSAJE"]
</h1>
@if (Model != null)
{
        <h1>Bienvenido a tu apgina, @Model.Nombre</h1>
        <h1 style="color:palevioletred">Email: @Model.Email</h1>
        <img src="@Model.Imagen" style="width:150px" />
}
